<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="casual"
            android:text="Plan Details"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name :"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

    <EditText

        android:id="@+id/etdcompname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textSize="22sp"
        android:hint="Company Name"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-condensed"
        android:inputType="none"
        />


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan ID :"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <EditText

            android:id="@+id/etdplanid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textSize="22sp"
            android:hint="PLAN ID"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"
            android:inputType="none"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan Detail :"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <EditText

            android:id="@+id/etdplandetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textSize="22sp"
            android:hint="Plan Detail"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"
            android:inputType="none"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Care :"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <EditText

            android:id="@+id/etdcustcare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:textSize="22sp"
            android:hint="Customer Care"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-condensed"
            android:inputType="none"
            />


    </LinearLayout>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dtype"
            android:textSize="20sp"
            android:clickable="false"
            android:focusable="false"
            android:checked="true"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:text="CELLULAR"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <Button
            android:id="@+id/btndcall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_green_dark"
            android:text="Call"
            android:layout_marginStart="60dp"
            android:fontFamily="serif-monospace"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />




        <Button
            android:id="@+id/btndmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_orange_light"
            android:text="Message"
            android:fontFamily="serif-monospace"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/btnddel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="?attr/colorError"
        android:text="Delete Plan"
        android:layout_marginStart="20dp"
        android:fontFamily="serif-monospace"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />
    <Button
        android:id="@+id/btndupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_blue_light"
        android:text="Update Plan"
        android:layout_marginStart="15dp"
        android:fontFamily="serif-monospace"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />


</LinearLayout>
</LinearLayout>